<div class="loaderContainer">
    @ChildContent
    <div class="@(IsDisplayed ? "loader" : "loader hidden")">
        <div class="loaderMessage">
            Loading...
        </div>
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public bool IsDisplayed { get; set; }
}