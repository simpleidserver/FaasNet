@inherits LayoutComponentBase
@layout MainLayout

<div id="client">    
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <NavLink href="/vpns">Vpns</NavLink>
            </li>
            <li class="breadcrumb-item">
                @Vpn
            </li>
            <li class="breadcrumb-item">
                Clients
            </li>
            <li class="breadcrumb-item active">
                @ClientId
            </li>
        </ol>
    </nav>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <NavLink class="nav-link" href="@($"/vpns/{Vpn}/clients/{ClientId}/info")">Information</NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link" href="@($"/vpns/{Vpn}/clients/{ClientId}/sessions")">Sessions</NavLink>
        </li>
    </ul>
    <div id="clientContent">
        @Body
    </div>
</div>

@code {
    public string ClientId { get; set; }
    public string Vpn { get; set; }

    protected override void OnParametersSet()
    {
        object clientId, vpn;
        if((this.Body.Target as RouteView)?.RouteData.RouteValues?.TryGetValue("clientId", out clientId) == true)
            ClientId = clientId?.ToString();
        if((this.Body.Target as RouteView)?.RouteData.RouteValues?.TryGetValue("vpn", out vpn) == true)
            Vpn = vpn?.ToString();
    }
}
